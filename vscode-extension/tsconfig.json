{
        "compilerOptions": {
                "module": "commonjs",
                "target": "ES2020",
                "outDir": "out",
                "lib": [
                        "ES2020",
                        "DOM"
                ],
                "sourceMap": true,
                "rootDir": "src",
                "strict": true,
                "skipLibCheck": true,
                "typeRoots": ["./node_modules/@types", "./src"],
                "types": ["node", "vscode"]
        },
        "include": [
                "src/**/*"
        ],
        "exclude": [
                "node_modules",
                "out"
        ]
}